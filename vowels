sentence=input("Enter a Sentence")
a=0
e=0
l=0
o=0
u=0
for i in sentence:
    if(i=='a' or i=='A'):
        a=a+1
    elif(i=='e' or i=='E'):
        e=e+1
    elif (i == 'o' or i == 'O'):
        o= 0 + 1
    elif (i == 'u' or i == 'U'):
        u= u + 1
    elif (i == 'i' or i == 'I'):
        l = l + 1
v=a+e+l+o+u
print("vowels in sentence",v)
print("Each vowel a,e,i,o,u repeated as :",a,e,l,o,u)
